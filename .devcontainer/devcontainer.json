// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/postgres
{
	// TODO ðŸ‘‡ Customize the name of the dev container. This will be displayed when starting the container.
	"name": "Safe Trade",
	"dockerComposeFile": "docker-compose.yml",
	"service": "app",
	"workspaceFolder": "/workspaces",
	"features": {},
	"mounts": [
		"source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached"
	],
	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// This can be used to network with other containers or the host.
	"forwardPorts": [
		8000, // Django Server
		5432, // PostgreSQL
		6379, // Redis
		5555, // Celery Flower
		9200, // Elasticsearch
		5601 // Kibana
	],
	"portsAttributes": {
		"8000": {
			"label": "Django Server",
			"onAutoForward": "notify",
			"protocol": "http"
		},
		"5432": {
			"label": "PostgreSQL Database"
		},
		"6379": {
			"label": "Redis Cache"
		},
		"5555": {
			"label": "Celery Flower"
		},
		"9200": {
			"label": "Elasticsearch"
		},
		"5601": {
			"label": "Kibana Dashboard"
		}
	},
	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "pip install --user -r requirements.txt",
	// Configure tool-specific properties.
	// "postCreateCommand": "cd /workspaces && poetry install && poetry run create_dev_env && poetry run python manage.py migrate",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.black-formatter",
				"streetsidesoftware.code-spell-checker",
				"mtxr.sqltools",
				"mtxr.sqltools-driver-pg",
				"IronGeek.vscode-env",
				"tamasfe.even-better-toml",
				"ms-python.flake8",
				"VisualStudioExptTeam.vscodeintellicode",
				"ms-python.isort",
				"ms-toolsai.jupyter",
				"ms-python.python",
				"Gruntfuggly.todo-tree",
				"shardulm94.trailing-spaces",
				"usernamehw.errorlens",
				"github.vscode-github-actions"
			]
		}
	},
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	"remoteUser": "vscode"
}